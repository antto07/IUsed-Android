<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main.MainActivity"
    >


    <LinearLayout
        android:id="@+id/linear_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--android:id="@+id/swiperefresh_new"-->
            <!--android:layout_weight="0.70"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
           <!--&gt;-->

        <!--<SeekBar-->
            <!--android:id="@+id/seek1"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="10dp"-->
            <!--android:max="100"-->
            <!--android:progress="50"-->
            <!--android:thumb="@drawable/oval_shape"-->
            <!--android:progressDrawable="@drawable/progress_appearance"-->

            <!--/>-->

        <LinearLayout

            android:id="@+id/fragments"
            android:layout_weight="0.70"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_img_noads"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#E1E0DF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_scanned_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Scanned Ads"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_noads"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/txtAdsStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Right now you don't have any scanned Ads"
                    android:textColor="#9a0707"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/linear_search_box"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_search_search"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_search_category_default" />

                    <EditText
                        android:id="@+id/searchView1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.50"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="Search Ads" />

                    <ImageView
                        android:id="@+id/img_search_clear"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@android:drawable/ic_menu_close_clear_cancel" />
                </LinearLayout>

                <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/swiperefresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">


                    <GridView
                        android:id="@android:id/list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/app_name"
                        android:drawSelectorOnTop="true"
                        android:horizontalSpacing="15dp"
                        android:numColumns="2"
                        android:verticalSpacing="15dp">

                    </GridView>

                </android.support.v4.widget.SwipeRefreshLayout>

            </LinearLayout>


        </LinearLayout>

        <!--</android.support.v4.widget.SwipeRefreshLayout>-->

        <LinearLayout
            android:id="@+id/linear_bottom_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/linear_categories"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/buy_red"
                    android:layout_gravity="center"
                    android:id="@+id/img_icon_categories" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/txt_categories" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_sell"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sell_black"
                    android:id="@+id/img_icon_sell" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sell"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/txt_sell" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_orders"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/orders_black"
                    android:id="@+id/img_icon_orders" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/txt_orders" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_donate"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/donate_black"
                    android:id="@+id/img_icon_donate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donate"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/txt_donate" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_wishlist"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wishlist_gray"
                    android:id="@+id/img_icon_wishlist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wishlist"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/txt_wishlist" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_location_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true"
        android:background="#E5E5E5"
        android:visibility="invisible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                <TextView
                    android:id="@+id/txt_filter_cancel"
                    android:layout_width="match_parent"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:text="CANCEL"/>

                <TextView
                    android:id="@+id/txt_filter_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="0.50"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="DONE"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="DISTANCE"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginLeft="6dp"
                            android:gravity="center"
                            android:id="@+id/textView6" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="0.50">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="16dp"
                                        android:textColor="@color/black"
                                        android:id="@+id/txt_start_distance" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text=" Km(s)"
                                        android:textSize="16dp"
                                        android:textColor="@color/black"
                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="0.50">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="500"
                                        android:textColor="@color/black"
                                        android:textSize="16dp"
                                        android:id="@+id/txt_seekbar_distance" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" Km(s)"
                                        android:textSize="16dp"
                                        android:textColor="@color/black"
                                        />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!--<org.adw.library.widgets.discreteseekbar.DiscreteSeekBar-->
                                <!--android:id="@+id/seekBar_distance"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--app:dsb_max="500"-->
                                <!--android:visibility="gone"-->
                                <!--app:dsb_min="1" />-->

                            <SeekBar
                                android:id="@+id/seekbar_distance_new"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="500"
                                android:progress="500"
                                android:progressDrawable="@drawable/seekbar_drawable_progress"
                                android:thumb="@drawable/seekbar_drawable_thumb"
                                android:padding="5dp"
                                />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="SORT BY"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginLeft="6dp"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioGroup
                            android:id="@+id/radioGroup_sort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rad_newest_first"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="true"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Newest First"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray1"
                                android:layout_margin="10dp"/>

                            <RadioButton
                                android:id="@+id/rad_closest_first"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Closest First"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray1"
                                android:layout_margin="10dp"/>

                            <RadioButton
                                android:id="@+id/rad_price_low_to_high"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Price: low to high"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray1"
                                android:layout_margin="10dp"/>

                            <RadioButton
                                android:id="@+id/rad_price_high_to_low"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Price: high to low"
                                android:textColor="@color/black" />


                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray1"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="POSTED WITHIN"
                            android:layout_marginLeft="6dp"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioGroup
                            android:id="@+id/radioGroup_posted_within"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rad_last_24h"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="true"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="The last 24h"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray1"
                                android:layout_margin="10dp"/>

                            <RadioButton
                                android:id="@+id/rad_last_7days"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="The last 7 days"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray1"
                                android:layout_margin="10dp"/>

                            <RadioButton
                                android:id="@+id/rad_last_30_days"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="The last 30 days"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray1"
                                android:visibility="gone"
                                android:layout_margin="10dp"/>

                            <RadioButton
                                android:id="@+id/rad_all_products"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:visibility="gone"
                                android:text="All Products"
                                android:textColor="@color/black" />


                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray1"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="PRICE"
                            android:layout_marginLeft="6dp"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.50">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs "
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                 />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:id="@+id/txt_start_price" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.50">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs "
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:id="@+id/textView14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10000"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:id="@+id/txt_seekbar_price" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!--<org.adw.library.widgets.discreteseekbar.DiscreteSeekBar-->
                            <!--android:id="@+id/seekBar_price"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--app:dsb_max="100000"-->
                            <!--app:dsb_min="100" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="From :"
                                android:layout_weight="0.50"
                                android:textColor="@color/black"
                                android:textSize="18dp"/>

                            <EditText
                                android:id="@+id/edt_price_from"
                                android:background="@drawable/edit_text_bottom_border_green"
                                android:layout_width="420dp"
                                android:layout_height="40dp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="8"
                                android:singleLine="true"
                                android:layout_weight="0.50"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="To :"
                                android:layout_weight="0.50"
                                android:textColor="@color/black"
                                android:textSize="18dp"/>

                            <EditText
                                android:id="@+id/edt_price_to"
                                android:background="@drawable/edit_text_bottom_border_green"
                                android:layout_width="420dp"
                                android:layout_height="40dp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="8"
                                android:singleLine="true"
                                android:layout_weight="0.50"
                                />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </ScrollView>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_location_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true"
        android:padding="@dimen/activity_vertical_margin"
        android:background="#E5E5E5"
        android:visibility="invisible">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/card_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_margin="4dp"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/location_icon_home"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="5dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/gray"></LinearLayout>

                <EditText
                    android:id="@+id/edt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Change your location manually"
                    android:layout_margin="4dp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:maxLines="1" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <ListView
            android:id="@+id/list_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view"
            android:layout_marginTop="10dp"></ListView>
    </RelativeLayout>


</LinearLayout>
