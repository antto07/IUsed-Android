<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:background="@color/white"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="0.20"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/no_image"
                        android:layout_gravity="center"
                        android:id="@+id/img_product_photo" />


                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.80"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <com.iused.utils.CustomFontToolbarText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/txt_user_name" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(6 months)"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/txt_offered_till" />

                    <com.iused.utils.CustomFontTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="â‚¹ 500"
                        android:textSize="18dp"
                        android:layout_margin="3dp"
                        android:textColor="@color/black"
                        android:id="@+id/txt_amount" />

                    <com.iused.utils.CustomFontTextview
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="View Contact"
                        android:layout_margin="3dp"
                        android:background="@drawable/settings_corner"
                        android:textColor="@color/white"/>
                    <com.iused.utils.CustomFontTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Expiers in  : hh:mm:ss"
                        android:textSize="16dp"
                        android:layout_margin="3dp"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/txt_timer" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:orientation="horizontal">

                        <com.iused.utils.CustomFontTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Expiers in  "
                            android:textSize="16dp"
                            android:layout_margin="3dp"
                            android:textColor="@color/black"
                            />

                        <com.iused.utils.CustomFontTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="10h : 30m"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_margin="3dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/txt_timer_hm_only" />


                    </LinearLayout>



                </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>