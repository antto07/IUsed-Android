    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffe5e5e5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:layout_collapseMode="parallax" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_collapseMode="parallax">

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/noimage"/>

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="5dip" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">
                        <com.iused.utils.CustomFontToolbarText
                            android:id="@+id/txt_product_name"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:layout_margin="4dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="22dp"/>

                        <com.iused.utils.CustomFontTextview
                            android:id="@+id/txt_used_for"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="20 mins"/>

                        <com.iused.utils.CustomFontTextviewItalic
                            android:id="@+id/txt_condition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="italic"
                            android:text="20 mins"/>

                        <com.iused.utils.CustomFontTextview
                            android:id="@+id/txt_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="20 mins"/>



                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                >

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginLeft="4dp">

                                    <com.iused.utils.CustomFontTextview
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:text="A"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="26dp"
                                        android:visibility="gone"
                                        android:background="@drawable/radio_circle"
                                        android:id="@+id/txt_name_first_letter" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/img_seller_image"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/no_image"
                                        android:layout_gravity="center"
                                        />


                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center">

                                        <com.iused.utils.CustomFontTextview
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="---"
                                            android:textSize="22dp"
                                            android:textColor="@color/colorPrimary"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="4dp"
                                            android:id="@+id/txt_name" />

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center">

                                            <com.iused.utils.CustomFontTextview
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text=" is Donating"
                                                android:textSize="18dp"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:id="@+id/textView2" />

                                            <com.iused.utils.CustomFontToolbarText
                                                android:visibility="gone"
                                                android:layout_margin="6dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:textSize="22dp"
                                                android:text="$ ---"
                                                android:textStyle="bold"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textColor="@color/colorPrimary"
                                                android:id="@+id/txt_product_price" />
                                        </LinearLayout>

                                        <com.iused.utils.CustomFontTextview
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="(It's non-Negotiable Price)"
                                            android:id="@+id/textView12" />

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="2dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edit_text_bottom_border_green"
                        android:gravity="center">

                        <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edt_message"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:maxLength="300"
                        android:layout_margin="6dp"
                        android:hint="Enter an emotional message..*"
                        android:textSize="18dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        />

                        </android.support.design.widget.TextInputLayout>

                        <!--<EditText-->
                            <!--android:id="@+id/edt_message"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:layout_margin="10dp"-->
                            <!--android:background="@drawable/editexttheme_gray"-->
                            <!--android:gravity="center"-->
                            <!--android:maxLength="1000"-->
                            <!--android:hint="Enter an emotional message to the donorâ€¦*"-->
                            <!--android:textSize="16dp"-->
                            <!--android:inputType="textNoSuggestions|textMultiLine"-->
                            <!--android:lines="3" />-->



                        <com.iused.utils.CustomFontButton
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:text="Request to Get it"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/button_custom_app_color"
                            android:textColor="@color/white"
                            android:id="@+id/btn_want_to_buy" />

                        <com.iused.utils.CustomFontTextview
                            android:visibility="gone"
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Surprise Offer"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/textView4" />

                        <com.iused.utils.CustomFontTextview
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:layout_marginBottom="10dp"
                            android:text="If paid online now, you will get 20% off"
                            android:id="@+id/textView3" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="2dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.iused.utils.CustomFontTextview
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Item Description"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/textView5" />

                        <com.iused.utils.CustomFontTextview
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product Description"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/txt_product_description" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>