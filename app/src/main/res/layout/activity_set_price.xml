                    <!--</android.support.design.widget.TextInputLayout>-->


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                android:layout_margin="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.iused.utils.CustomFontCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="24dp"
                        android:layout_margin="6dp"
                        android:text="Fixed Price"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:id="@+id/chk_non_negotiable" />


                    <com.iused.utils.CustomFontTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Best price you can offer"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_margin="6dp"
                        android:textColor="@color/black"
                        />

                    <LinearLayout
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/curr_layout1"
                        android:background="@drawable/editexttheme_gray"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >

                        <com.iused.utils.CustomFontTextview
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/curr_code_non_neg"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="£"
                            android:layout_margin="7dp"
                            android:textColor="@color/black"
                            android:textSize="22dp" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:visibility="invisible"
                            android:layout_height="match_parent"
                            android:background="@color/gray"></LinearLayout>

                        <com.iused.utils.CustomFontEdittext
                            android:id="@+id/edt_price_non_negotiable"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:hint="Enter Price"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="20dp" />

                    </LinearLayout>


