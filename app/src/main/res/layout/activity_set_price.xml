<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/GalaxyZooThemeToolbarDarkOverflow"
         />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.70">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_page_grey_layouty">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                android:layout_margin="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.iused.utils.CustomFontCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="24dp"
                        android:layout_margin="6dp"
                        android:text="Compete"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:checked="true"
                        android:id="@+id/chk_negotiable" />

                    <com.iused.utils.CustomFontTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Let the buyers offer a better price"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_margin="6dp"
                        android:textColor="@color/black"
                        android:id="@+id/textView7" />

                    <com.iused.utils.CustomFontTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lowest price you can offer"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_margin="6dp"
                        android:textColor="@color/black"
                        android:id="@+id/textView8" />

                    <LinearLayout
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/curr_layout"
                        android:background="@drawable/editexttheme_gray"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >

                        <com.iused.utils.CustomFontTextview
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/curr_code_neg"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="£"
                            android:layout_margin="7dp"
                            android:textColor="@color/black"
                            android:textSize="22dp" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:visibility="invisible"
                            android:background="@color/gray"></LinearLayout>

                        <com.iused.utils.CustomFontEdittext
                            android:id="@+id/edt_price_negotiable"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:hint="Enter Price"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="20dp" />

                    </LinearLayout>


                    <!--<android.support.design.widget.TextInputLayout-->
